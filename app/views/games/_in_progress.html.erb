<div>
  <h1 class="text-[29px] font-medium flex flex-wrap">
    C'est au tour de <%= @current_player.name %>
  </h1>
  <p><%= button_to("Arrêter la partie", game_path(@current_game.id), method: :delete, class: "border-none bg-transparent text-sm text-neutral-500", data: { turbo_confirm: "Êtes-vous sûrs ?" }) %></p>
</div>
<div class="mt-9 bg-mygreen w-full px-5 py-6 text-black font-medium">
  <div>Score: <%= @current_player.current_score %>/<%= @current_game.max_score %></div>
  <div>Points restants: <%= @current_player.points_to_success %></div>
</div>
<div class="mt-3">
  <%= simple_form_for :player, url: add_score_games_path, method: :patch, data: { turbo: false } do |f| %>
    <%= f.input :score, label: "Score de la manche", as: :integer, required: false, class: "text-black" %>
    <%= f.submit "Valider", data: { disable_with: false }, class: "block w-full bg-mybeige text-center p-3 text-black mt-8 cursor-pointer" %>
  <% end %>
</div>
